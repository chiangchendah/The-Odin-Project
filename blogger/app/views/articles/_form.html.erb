<%= form_for(@article) do |f| %>
	
	<!-- I don't know what this does yet -->
	<ul>
	<% @article.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>

	<p>
		<!-- first :title for html text, second :title for ruby key/attribute or method -->
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<!-- attribute not native to Article but associated with Article instances -->
		<%= f.label :tag_list %><br />
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

